

@{
    ViewData["Title"] = "Connexion";
}

<div class="container mt-5" style="max-width: 400px;">

    <form asp-action="Login1" method="post" class="shadow p-4 rounded bg-light">
        <div class="form-group mb-3">
            <label for="email">Email :</label>
            <input type="email" name="email" id="email" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label for="motDePasse">Mot de passe :</label>
            <input type="password" name="motDePasse" id="motDePasse" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger mt-3 text-center">
            @ViewBag.Message
        </div>
    }
    @{
        Layout = "_LayoutAuth"; // on force le layout minimal pour cette vue
    }

</div>
