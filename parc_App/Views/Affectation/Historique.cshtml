@model IEnumerable<parc_App.Models.HistoriqueAffectation>

<h1>Historique des affectations</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Matériel</th>
            <th>Preneur</th>
            <th>Date Affectation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Materiel?.TypeMateriel</td>
                <td>@(item.Preneur != null ? item.Preneur.Nom + " " + item.Preneur.Prenom : "Non attribué")</td>
                <td>@item.DateAffectation.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Action</td>
            </tr>
        }
    </tbody>
</table>
<style>
    body {
        color: #566787;
        background: #f5f5f5;
        font-family: 'Varela Round', sans-serif;
        font-size: 13px;
    }

    .table-responsive {
        margin: 30px 0;
        overflow-x: auto;
    }

    .table-wrapper {
        background: #fff;
        padding: 20px 25px;
        border-radius: 3px;
        box-shadow: 0 1px 1px rgba(0,0,0,0.05);
        width: 100%;
    }

    .table-title {
        padding-bottom: 15px;
        background: #435d7d;
        color: #fff;
        padding: 16px 30px;
        margin: -20px -25px 10px;
        border-radius: 3px 3px 0 0;
    }

        .table-title h2 {
            margin: 5px 0 0;
            font-size: 24px;
        }

        .table-title .btn {
            color: #fff;
            float: right;
            font-size: 13px;
            background: #2196F3;
            border: none;
            min-width: 50px;
            border-radius: 2px;
            margin-left: 10px;
        }

    .table td i {
        font-size: 19px;
    }

    .table td a {
        color: #566787;
        text-decoration: none;
    }

        .table td a.edit {
            color: #FFC107;
        }

        .table td a.delete {
            color: #F44336;
        }

        .table td a:hover {
            color: #2196F3;
        }

    /* Boutons dans la table */
    .table .btn-sm {
        padding: 2px 6px;
        font-size: 12px;
    }
</style>
