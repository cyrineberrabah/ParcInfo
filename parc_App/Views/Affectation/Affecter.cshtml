@model parc_App.ViewModel.MaterielAffectationViewModel

<h2>Affecter un preneur</h2>

<form asp-action="Affecter" method="post">
    <input type="hidden" asp-for="MaterielId" />

    <div class="mb-3">
        <label class="form-label">Attribuer à</label>
        <select asp-for="PreneurId" asp-items="Model.PreneursDisponibles" class="form-select">
            <option value="">-- Non attribué --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
