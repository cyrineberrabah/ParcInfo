@model parc_App.Models.Materiel
<h2>Supprimer le matériel</h2>
<h3>Êtes-vous sûr de vouloir supprimer ce matériel ?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.TypeMateriel</dd>
        <dt class="col-sm-2">Marque</dt>
        <dd class="col-sm-10">@Model.Marque</dd>
        <dt class="col-sm-2">Modèle</dt>
        <dd class="col-sm-10">@Model.Modele</dd>
        <dt class="col-sm-2">Numéro Série</dt>
        <dd class="col-sm-10">@Model.NumeroSerie</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

<style>
    /* Global styles */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: #f2f4f8;
        color: #1f2937;
        margin: 0;
        padding: 0;
    }

    /* Container */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 80px);
        padding: 40px 20px;
        background: linear-gradient(145deg, #e2e8f0 0%, #f1f5f9 100%);
    }

    /* Card styling */
    .card {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
        max-width: 640px;
        width: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.12);
        }

    /* Headings */
    h2 {
        font-size: 1.875rem;
        font-weight: 700;
        color: #1a202c;
        text-align: center;
        margin-bottom: 1rem;
        letter-spacing: -0.025em;
    }

    h3 {
        font-size: 1.25rem;
        font-weight: 500;
        color: #dc2626;
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Description list */
    .row {
        margin: 0;
    }

        .row dt {
            font-size: 0.875rem;
            font-weight: 600;
            color: #374151;
            padding: 0.75rem 0;
            border-bottom: 1px solid #e5e7eb;
        }

        .row dd {
            font-size: 0.95rem;
            color: #1f2937;
            padding: 0.75rem 0;
            margin: 0;
            border-bottom: 1px solid #e5e7eb;
        }

    /* Buttons */
    .btn {
        padding: 0.75rem 1.5rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        margin-right: 0.75rem;
    }

    .btn-danger {
        background-color: #dc2626;
        color: #ffffff;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
        }

    .btn-secondary {
        background-color: #6b7280;
        color: #ffffff;
    }

        .btn-secondary:hover {
            background-color: #4b5563;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(75, 85, 99, 0.3);
        }

    /* Form */
    form {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    /* Responsive design */
    media screen and (max-width: 600px) {
        .container

    {
        padding: 20px;
    }

    .card {
        padding: 1.5rem;
    }

    h2 {
        font-size: 1.5rem;
    }

    h3 {
        font-size: 1.125rem;
    }

    .row dt, .row dd {
        font-size: 0.85rem;
        padding: 0.5rem 0;
    }

    .btn {
        width: 100%;
        margin-bottom: 0.75rem;
        margin-right: 0;
    }

    }
</style>