@* _Sidebar.cshtml *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />

<div id="mySidenav" class="sidenav">
    <a class="closebtn" onclick="closeNav()">&times;</a>
    <a class="nav-link text-white" asp-controller="Admin" asp-action="">Dashboard</a>
    <a class="nav-link text-white" asp-controller="Materiel" asp-action="Index">Materiel</a>
    <a class="nav-link text-white" asp-controller="Preneurs" asp-action="Index">Preneurs</a>
    <a class="nav-link text-white" asp-controller="Affectation" asp-action="Index">Affecter</a>
    <a class="nav-link text-white" asp-controller="Departements" asp-action="Index">Départements</a>

    <div class="logout-container mt-auto px-4 pb-4">
        <!-- Bouton qui ouvre le modal -->
        <button type="button" class="btn-logout w-100" data-toggle="modal" data-target="#logoutModal">
            <i class="fas fa-sign-out-alt"></i> Déconnexion
        </button>
    </div>
</div>

<!-- Modal Déconnexion -->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="logoutModalLabel">Confirmation</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir vous déconnecter ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Se déconnecter</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .sidenav {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1050;
        top: 0;
        left: 0;
        background-color: #0d5586;
        overflow-x: hidden;
        padding-top: 60px;
        transition: 0.5s;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .sidenav a {
            padding: 12px 32px;
            text-decoration: none;
            font-size: 20px;
            color: #f1f1f1;
            display: block;
            transition: color 0.3s, background-color 0.3s;
        }

            .sidenav a:hover {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.1);
            }

        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            cursor: pointer;
            color: #fff;
        }

    .btn-logout {
        font-size: 18px;
        background-color: chocolate;
        border: none;
        color: #fff;
        text-align: left;
        padding: 10px 15px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-logout:hover {
            background-color: #145a8a;
            transform: translateY(-2px);
        }

        .btn-logout i {
            font-size: 18px;
        }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>
