<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin -</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* Sidebar */
        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
            background-color: #0d5586;
            color: #fff;
            padding-top: 60px;
            display: flex;
            flex-direction: column;
            transition: width 0.3s ease;
            z-index: 1050;
        }

            #sidebar a {
                color: #f1f1f1;
                text-decoration: none;
                padding: 12px 20px;
                display: flex;
                align-items: center;
                font-size: 18px;
            }

                #sidebar a i {
                    min-width: 15;
                }

            #sidebar.collapsed {
                width: 60px;
            }

                #sidebar.collapsed .link-text {
                    display: none;
                }

        /* Topbar */
        #topbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 60px;
            background-color: #0d5586;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 1060;
        }

        .hamburger-btn {
            font-size: 24px;
            background: none;
            border: none;
            color: #fff;
            cursor: pointer;
        }

        .user-name {
            font-weight: 500;
        }

        /* Main content */
        #main-content {
            margin-left: 250px;
            padding: 80px 20px 20px 20px;
            transition: margin-left 0.3s ease;
        }

            #main-content.full-width {
                margin-left: 60px;
            }

        /* Logout button */
        .btn-logout {
            font-size: 18px;
            background-color: #145a8a;
            border: none;
            color: #fff;
            text-align: left;
            padding: 10px 15px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.3);
            transition: background-color 0.3s, transform 0.2s;
            width: 100%;
        }

            .btn-logout:hover {
                background-color: #1c6cb3;
                transform: translateY(-2px);
            }

            .btn-logout i {
                font-size: 18px;
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar">
        <a asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-tachometer-alt"></i> <span class="link-text">Dashboard</span></a>
        <a asp-controller="Materiel" asp-action="Index"><i class="fas fa-desktop"></i> <span class="link-text">Matériel</span></a>
        <a asp-controller="Preneurs" asp-action="Index"><i class="fas fa-users"></i> <span class="link-text">Preneurs</span></a>
        <a asp-controller="Affectation" asp-action="Index"><i class="fas fa-exchange-alt"></i> <span class="link-text">Affecter</span></a>
        <a asp-controller="Departements" asp-action="Index">
            <i class="fas fa-building"></i> <span class="link-text">Départements</span>
        </a>

        <div class="mt-auto px-3 pb-3 logout-container">
            <!-- Bouton qui ouvre le modal -->
            <button type="button" class="btn-logout" data-bs-toggle="modal" data-bs-target="#logoutModal">
                <i class="fas fa-sign-out-alt"></i> <span class="link-text">Déconnexion</span>
            </button>

        </div>
    </div>
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="fas fa-sign-out-alt fa-3x text-warning mb-3"></i>
                    <p>Êtes-vous sûr de vouloir vous déconnecter ?</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Se déconnecter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Topbar -->
    <nav id="topbar">
        <button class="hamburger-btn" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
        <span class="user-name"><i class="fas fa-user-circle me-2"></i>@User.Identity.Name</span>
    </nav>
    <!-- Main Content -->
    <div id="main-content" class="container-fluid">
        <div class="content-wrapper" style="overflow-x:auto;">
            @RenderBody()
        </div>
    </div>

    <style>  #main-content table {
    width: 100% !important;
    }</style>
  

    <!-- Scripts -->
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const main = document.getElementById('main-content');
            sidebar.classList.toggle('collapsed');
            main.classList.toggle('full-width');
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
