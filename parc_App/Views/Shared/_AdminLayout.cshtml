<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin - parc_App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        /* Sidebar */
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1050;
            top: 0;
            left: 0;
            background-color: #0d5586;
            overflow-x: hidden;
            padding-top: 60px;
            transition: 0.5s;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidenav a {
                padding: 10px 8px 10px 32px;
                text-decoration: none;
                font-size: 20px;
                color: #f1f1f1;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                    color: #fff;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                color: #fff;
                cursor: pointer;
            }

        /* Déconnexion bouton */
        .logout-container {
            padding: 20px 30px;
        }

            .logout-container form button {
                background: none;
                border: none;
                color: #f1f1f1;
                font-size: 18px;
                width: 100%;
                text-align: left;
            }

                .logout-container form button:hover {
                    color: #ff4b5c;
                }

        /* Main */
        #main {
            transition: margin-left 0.5s;
            padding: 20px;
            margin-left: 0;
        }

        /* Hamburger button */
        .openbtn {
            font-size: 30px;
            cursor: pointer;
            background-color: #566787;
            color: white;
            border: none;
            padding: 10px 15px;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1100;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.3);
            transition: background-color 0.3s ease;
        }

            .openbtn:hover {
                background-color: #0d5586;
            }
    </style>
</head>
<body>

    <!-- Bouton hamburger -->
    <button class="openbtn" onclick="openNav()">☰</button>

    <!-- Sidebar -->
    <div id="mySidenav" class="sidenav">
        <a class="closebtn" onclick="closeNav()">&times;</a>
        <a asp-controller="Admin" asp-action="About">About</a>
        <a asp-controller="Materiel" asp-action="Index">Materiel</a>
        <a asp-controller="Preneurs" asp-action="Index">Preneurs</a>
        <a asp-controller="Affectation" asp-action="Index">Affecter</a>


        <!-- Déconnexion -->
        <div class="logout-container mt-auto">
            <form asp-controller="Login" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</button>
            </form>
        </div>
    </div>

    <!-- Contenu principal -->
    <div id="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            document.querySelector(".openbtn").style.display = "none";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.querySelector(".openbtn").style.display = "block";
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
